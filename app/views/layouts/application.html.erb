<!DOCTYPE html>
<html>
<head>
  <title>Ancja Urls</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "jquery-1.4.4" %>
  <%= javascript_include_tag "links" %>
  <%= yield :head %>
  <%= csrf_meta_tag %>
  <script type="text/javascript">

      jQuery(function($) {
          matroska('all_comments');
          observe_element('paginator');
      });

      function vote(kind, link_id, el) {
          jQuery.ajax({
              dataType: 'script',
              url: "/link/vote",
              data: {
                  kind: kind,
                  link_id: link_id
              },
              type: 'post',
              success: function() {
                  el.parentElement.innerHTML = "";
              }
          });
      }

  </script>

</head>
<body>
<div id="top_bar">

</div>

<div id="container">

  <%= render :partial => "layouts/header" %>

  <div id="system_message">
    <%= system_messages %>
  </div>

  <%= yield %>

</div>
</body>
</html>
